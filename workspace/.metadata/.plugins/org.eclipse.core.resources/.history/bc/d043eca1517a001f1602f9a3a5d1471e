package com.yemili.org.student.controller;

import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.yemili.org.student.model.Student;

public class ControllerView {
	
	
	

@GetMapping("/registration")
public String showRegistrationForm(Model model) {
    model.addAttribute("student", new Student());
    return "registration"; // This should match Thymeleaf template name
}

@PostMapping("/register")
public String registerStudent(
    @RequestParam String name,
    @RequestParam String gender,
    @RequestParam String email,
    @RequestParam String mobilenumber,
    @RequestParam String password,
    @RequestParam int age,
    Model model) {

    Student student = new Student();
    student.setName(name);
    student.setGender(gender);
    student.setEmail(email);
    student.setMobilenumber(mobilenumber);
    student.setPassword(password); // Hash the password in a real app
    student.setAge(age);

    // Save student to the database
    studentservice.addStudent(student);

	/*
	 * // Optional: Add a success message model.addAttribute("message",
	 * "Registration Successful!");
	 */
    return "registrationsuccessfully"; // Redirect to success page
}
