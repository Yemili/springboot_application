				System.out.println("unti1 marks"+"  "+"unti2 marks"+"  "+"Quartly marks"+"  "+"Halfearly marks"+"  "+"Annual marks");
				ssimp.marksupdation(id);
			}
			else if(option) { System.out.println("Thanks for selecting");}
		
		
